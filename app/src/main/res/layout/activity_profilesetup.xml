<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity"
    android:orientation="vertical"
    android:background="@color/colorVividBlue"
    >

    <TextView
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/montserrasemibold"
        android:gravity="center_horizontal"
        android:text="You need to setup your profile first"
        android:textColor="@color/colorWhite"
        android:textSize="26sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="128dp"
        android:layout_height="124dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:src="@drawable/profilesetup_ic_avator" />

    <Button
        android:id="@+id/changeAvatarBtn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/profilesetup_changeavatar_icon"
        android:textAlignment="center"
        android:layout_marginTop="-40dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="University Name"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:paddingEnd="7dp"
        android:paddingStart="5dp"
        android:textCursorDrawable="@drawable/colored_cursor"
        android:id="@+id/universityNameField"
        android:layout_width="320dp"
        android:layout_height="47dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_input_blue"
        android:drawableStart="@drawable/common_ic_university2"
        android:fontFamily="@font/montserrat_regular"
        android:hint="@string/profileSetup1University"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textSize="15sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="45dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Department"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:textCursorDrawable="@drawable/colored_cursor"
        android:id="@+id/departmentNameField"
        android:layout_width="320dp"
        android:layout_height="47dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_input_blue"
        android:drawableStart="@drawable/profilesetup_ic_department"
        android:fontFamily="@font/montserrat_regular"
        android:hint="@string/profileSetup1Department"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textSize="15sp"
        />

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/montserrat_regular"
            android:paddingBottom="5dp"
            android:text="Current Semester"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/montserrat_regular"
            android:paddingBottom="5dp"
            android:text="Total Semester"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-10dp"
        android:layout_gravity="center_horizontal"
        >

        <EditText
            android:id="@+id/currentSemesterField"
            android:layout_width="145dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_input_blue"
            android:drawableStart="@drawable/common_ic_student"
            android:fontFamily="@font/montserrat_regular"
            android:hint="@string/profileSetup1EnterValue"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textSize="15sp" />


        <EditText
            android:layout_marginLeft="30dp"
            android:id="@+id/totalSemesterField"
            android:layout_width="145dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_input_blue"
            android:drawableStart="@drawable/common_ic_hat"
            android:fontFamily="@font/montserrat_regular"
            android:hint="@string/profileSetup1EnterValue"

            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textSize="15sp" />

    </LinearLayout>


    <Button
        android:id="@+id/nextButton"
        android:gravity="center_horizontal"
        android:layout_width="140dp"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45dp"
        android:background="@drawable/shape_button_white_two"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/profileSetup1NextBtn"
        android:textAlignment="center"
        android:textColor="@color/colorVividLightBlue"
        android:textSize="15sp"
        android:paddingTop="9dp"
        android:elevation="3dp"
        />

</LinearLayout>