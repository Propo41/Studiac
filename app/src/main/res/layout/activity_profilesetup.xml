<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity"
    android:orientation="vertical"
    android:background="#24ADF3"
    >

    <TextView
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/montserrasemibold"
        android:gravity="center_horizontal"
        android:text="You need to setup your profile first"
        android:textColor="#FFFFFF"
        android:textSize="26dp"
        android:textStyle="bold" />


    <ImageView
        android:layout_width="128dp"
        android:layout_height="124dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:src="@drawable/profilesetup_avator_icon" />

    <Button
        android:id="@+id/changeAvatarBtn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/profilesetup_changeavatar_icon"
        android:textAlignment="center"
        android:layout_marginTop="-40dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="University Name"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"

        />

    <EditText
        android:id="@+id/universityNameField"
        android:layout_width="340dp"
        android:layout_height="75dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/shape_user_input"
        android:drawableStart="@drawable/common_email_icon"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Enter your University name"
        android:paddingLeft="13dp"
        android:paddingBottom="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="15dp"

        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Department"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/departmentNameField"
        android:layout_width="340dp"
        android:layout_height="75dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/shape_user_input"
        android:drawableStart="@drawable/common_key_icon"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Enter your department here"
        android:paddingLeft="13dp"
        android:paddingBottom="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="15dp"

        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="45dp"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/montserrat_regular"
            android:paddingBottom="5dp"
            android:text="Current Semester"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/montserrat_regular"
            android:paddingBottom="5dp"
            android:text="Total Semester"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-12dp"
        android:layout_marginLeft="35dp"
        android:paddingLeft="10dp"
        >

        <EditText
            android:id="@+id/currentSemesterField"
            android:layout_width="154dp"
            android:layout_height="73dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/shape_user_input"
            android:drawableStart="@drawable/common_student_icon"
            android:fontFamily="@font/montserrat_regular"
            android:hint="Enter value"
            android:paddingLeft="13dp"
            android:paddingBottom="10dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="15dp" />


        <EditText
            android:id="@+id/totalSemesterField"
            android:layout_width="154dp"
            android:layout_height="73dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/shape_user_input"
            android:drawableStart="@drawable/common_hat_icon"
            android:fontFamily="@font/montserrat_regular"
            android:hint="Enter value"
            android:paddingLeft="13dp"
            android:paddingBottom="10dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="15dp" />

    </LinearLayout>


    <Button
        android:id="@+id/nextButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="187dp"
        android:layout_height="65dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp"
        android:background="@drawable/common_ui_btn"
        android:fontFamily="@font/montserrat_medium"
        android:paddingBottom="5dp"
        android:text="Next"
        android:textAlignment="center"
        android:textColor="#51BEF5"
        android:textSize="15dp" />

</LinearLayout>