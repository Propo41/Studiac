<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="320dp"
    android:layout_height="255dp"
    android:layout_gravity="center"
    android:background="@drawable/shape_background_vividblue"
    >

    <TextView
        android:id="@+id/course_added_text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@id/click_icon_id"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/courseaddedtext"
        android:textColor="@color/colorWhite"
        android:textSize="21sp"

        />

    <Button
        android:id="@+id/course_continue_button_id"
        android:layout_width="135dp"
        android:layout_height="37dp"
        android:layout_below="@+id/course_addmore_button_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:background="@drawable/shape_button_white"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/courseaddedbuttontext1"
        android:textColor="@color/colorVividBlue"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/click_icon_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/dialog_ic_righttick" />

    <Button
        android:id="@+id/course_addmore_button_id"
        android:layout_width="135dp"
        android:layout_height="37dp"
        android:layout_below="@+id/course_added_text_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:background="@drawable/shape_button_white"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/courseaddedbuttontext"
        android:textColor="@color/colorVividBlue"
        android:textSize="12sp" />


</RelativeLayout>