<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view6"
        android:layout_width="@dimen/BottomSheetIconWidth"
        android:layout_height="@dimen/BottomSheetIconHeight"
        android:layout_marginTop="@dimen/BottomSheetIconTopHeight"
        android:background="@drawable/shape_background_cute_blue_rounded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/view_courses_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_semi_bold"
        android:text="@string/SendMsgDialog_Title"
        android:textColor="@color/colorVividBlue"
        android:textSize="@dimen/DialogMainTitleSize"
        app:layout_constraintEnd_toEndOf="@+id/view6"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="@+id/view6"
        app:layout_constraintTop_toBottomOf="@+id/view6" />

    <EditText
        android:id="@+id/send_message_input_id"
        android:layout_width="0dp"
        android:layout_height="@dimen/EditTextHeightNormal"
        android:layout_marginTop="@dimen/ViewGapSmall"
        android:background="@drawable/shape_input_ash_2_rounded"
        android:drawableStart="@drawable/common_ic_description"
        android:drawablePadding="@dimen/EditTextDrawablePadding"
        android:fontFamily="@font/montserrat_regular"
        android:hint="@string/SendMsgDialog_Hint"
        android:importantForAutofill="no"
        android:inputType="text"
        android:maxLength="350"
        android:paddingStart="@dimen/EditTextDrawablePaddingStart"
        android:paddingEnd="@dimen/EditTextDrawablePaddingStart"
        android:textColor="@color/colorBlackShade"
        android:textColorHint="@color/colorAsh"
        android:textSize="@dimen/DialogSubtitleSize"
        app:layout_constraintEnd_toEndOf="@+id/view_courses_text_title"
        app:layout_constraintStart_toStartOf="@+id/view_courses_text_title"
        app:layout_constraintTop_toBottomOf="@+id/textView51"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.8" />

    <Button
        android:id="@+id/send_message_button_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ButtonHeightBottomSheet"
        android:background="@drawable/ripple_effect_3"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/Button_send"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="@dimen/ViewGapSmall"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/send_message_input_id" />

    <TextView
        android:id="@+id/textView51"
        style="@style/CustomSubtitleFontAsh"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/SendMsgDialog_Description"
        app:layout_constraintEnd_toEndOf="@+id/view_courses_text_title"
        app:layout_constraintStart_toStartOf="@+id/view_courses_text_title"
        app:layout_constraintTop_toBottomOf="@+id/view_courses_text_title" />
</androidx.constraintlayout.widget.ConstraintLayout>