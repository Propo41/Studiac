<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    app:cardCornerRadius="15dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15sp"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/messenger_user_name_id"
            style="@style/CustomTitleFontWhite"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:paddingBottom="5dp"
            android:text="Course Name"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/viewCourses_courseCredit_id"
            style="@style/CustomSubtitleFontWhite"
            android:layout_width="250dp"
            android:layout_marginTop="3dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Course Credit: 3.00"
            app:layout_constraintStart_toStartOf="@+id/messenger_user_name_id"
            app:layout_constraintTop_toBottomOf="@+id/bulletin_post_category_id" />

        <TextView
            android:id="@+id/bulletin_post_category_id"
            style="@style/CustomSubtitleFontWhite"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Course Code: MATH1234"
            app:layout_constraintStart_toStartOf="@+id/messenger_user_name_id"
            app:layout_constraintTop_toBottomOf="@+id/messenger_user_name_id" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/bulletin_knock_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:clickable="true"
            app:backgroundTint="@color/colorPrimaryLight"
            app:fabSize="mini"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/messenger_user_name_id"
            app:srcCompat="@drawable/common_ic_edit" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>