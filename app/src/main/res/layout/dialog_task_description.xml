<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_background_vividblue">

    <TextView
        android:id="@+id/additionalNotesTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/TaskDescription_CreatedOn"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/DialogTitleSize"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/dialog_task_description_additional_notes"
        app:layout_constraintTop_toBottomOf="@+id/dialog_task_description_additional_notes" />


    <TextView
        android:id="@+id/dialog_task_description_created_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/PlaceHolder_Date"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/DialogSubtitleSize"
        android:paddingBottom="40dp"
        android:paddingTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/additionalNotesTitle2"
        app:layout_constraintTop_toBottomOf="@+id/additionalNotesTitle2" />

    <TextView
        android:id="@+id/dialog_task_description_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/TaskDescription_Text1"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/DialogSubtitleSize"
        android:paddingTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/courseDescriptionTitle"
        app:layout_constraintTop_toBottomOf="@+id/courseDescriptionTitle" />


    <Button
        android:id="@+id/dialog_task_description_continueBtn"
        android:layout_width="0dp"
        android:layout_height="@dimen/ButtonHeightDialog"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_bottom_dialog_button_left"
        android:fontFamily="@font/montserrat_semi_bold"
        android:text="@string/dialogTextCloseBtn"
        android:textAlignment="center"
        android:textColor="@color/colorVividBlue"
        android:foreground="?attr/selectableItemBackground"
        android:textSize="@dimen/DialogButtonTextSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_task_description_created_on"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5" />

    <Button
        android:id="@+id/dialog_task_description_deleteButton"
        android:layout_width="0dp"
        android:layout_height="@dimen/ButtonHeightDialog"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_button_white_five"
        android:fontFamily="@font/montserrat_semi_bold"
        android:text="@string/TaskDescription_Delete_Btn"
        android:textAlignment="center"
        android:foreground="?attr/selectableItemBackground"
        android:textColor="@color/colorBlackShade"
        android:textSize="@dimen/DialogButtonTextSize"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_task_description_continueBtn"
        app:layout_constraintStart_toEndOf="@+id/dialog_task_description_continueBtn"
        app:layout_constraintTop_toTopOf="@+id/dialog_task_description_continueBtn"/>

    <TextView
        android:id="@+id/dialog_task_description_header_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/TaskDescription_Category_text"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorWhite"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/dialog_task_description_description"
        app:layout_constraintTop_toBottomOf="@+id/dialog_task_description_description" />


    <TextView
        android:id="@+id/dialog_task_description_header_due"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/TaskDescription_Due_Text"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/DialogTitleSize"
        android:textStyle="bold"
        android:layout_marginEnd="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_task_description_header_tag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dialog_task_description_header_tag" />

    <TextView
        android:id="@+id/dialog_task_description_taskDue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginTop="5dp"
        android:text="@string/PlaceHolder_Date"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/DialogSubtitleSize"
        app:layout_constraintStart_toStartOf="@+id/dialog_task_description_header_due"
        app:layout_constraintTop_toBottomOf="@+id/dialog_task_description_header_due" />

    <TextView
        android:id="@+id/dialog_task_description_header_additional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/TodoQuickAdd_Text2"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="15dp"
        android:textSize="@dimen/DialogTitleSize"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/dialog_task_description_task_tag"
        app:layout_constraintTop_toBottomOf="@+id/dialog_task_description_task_tag" />


    <TextView
        android:id="@+id/dialog_task_description_task_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginTop="5dp"
        android:text="@string/PlaceHolder_TextSmall"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/DialogSubtitleSize"
        app:layout_constraintStart_toStartOf="@+id/dialog_task_description_header_tag"
        app:layout_constraintTop_toBottomOf="@+id/dialog_task_description_header_tag" />

    <TextView
        android:id="@+id/dialog_task_description_additional_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/montserrat_regular"
        android:paddingTop="5dp"
        android:text="@string/PlaceHolder_Text"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/DialogSubtitleSize"
        app:layout_constraintStart_toStartOf="@+id/dialog_task_description_header_additional"
        app:layout_constraintTop_toBottomOf="@+id/dialog_task_description_header_additional" />

    <TextView
        android:id="@+id/dialog_task_description_header_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/TaskDescription_Tag_Text"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/DialogTitleSize"
        android:layout_marginTop="15dp"

        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/dialog_task_description_taskCategory"
        app:layout_constraintTop_toBottomOf="@+id/dialog_task_description_taskCategory" />

    <TextView
        android:id="@+id/dialog_task_description_taskCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/PlaceHolder_TextSmall"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/DialogSubtitleSize"
        android:paddingTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/dialog_task_description_header_category"
        app:layout_constraintTop_toBottomOf="@+id/dialog_task_description_header_category" />

    <TextView
        android:id="@+id/courseDescriptionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginStart="50dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/TaskDescription_Text1"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/DialogTitleSize"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView52" />

    <TextView
        android:id="@+id/textView52"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/TaskDescription_Title"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/DialogMainTitleSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/dialog_task_description_tag_colour"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_task_description_task_tag"
        app:layout_constraintStart_toEndOf="@+id/dialog_task_description_task_tag"
        app:layout_constraintTop_toTopOf="@+id/dialog_task_description_task_tag" />


</androidx.constraintlayout.widget.ConstraintLayout>