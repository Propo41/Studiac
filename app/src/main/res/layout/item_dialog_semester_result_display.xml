<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorCuteBlue"
    android:orientation="horizontal"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/item_dialog_semester_result_display_course_text"
        android:layout_width="145dp"
        android:layout_height="41dp"
        android:background="@drawable/shape_background_white_result_tracker_2"
        android:drawableStart="@drawable/result_tracker_ic_book_icon_s"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:paddingStart="@dimen/EditTextDrawablePaddingStart"
        android:paddingEnd="@dimen/EditTextDrawablePaddingStart"
        android:text="@string/resultTrackerItemSemesterGPACourseHint"
        android:textColor="@color/colorVividBlue"
        android:textSize="@dimen/EditTextTextSizeSmall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_dialog_semester_result_display_gpa_text"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/item_dialog_semester_result_display_gpa_text"
        android:layout_width="89dp"
        android:layout_height="41dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/shape_background_white_result_tracker_2"
        android:drawableStart="@drawable/result_tracker_ic_grade"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:paddingStart="@dimen/EditTextDrawablePaddingStart"
        android:paddingEnd="@dimen/EditTextDrawablePaddingStart"
        android:text="@string/resultTrackerItemDialogGradeHint"
        android:textAlignment="center"
        android:textColor="@color/colorVividBlue"
        android:textSize="@dimen/EditTextTextSizeSmall"
        app:layout_constraintBottom_toBottomOf="@+id/item_dialog_semester_result_display_course_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/item_dialog_semester_result_display_course_text"
        app:layout_constraintTop_toTopOf="@+id/item_dialog_semester_result_display_course_text" />


</androidx.constraintlayout.widget.ConstraintLayout>