<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#24ADF3"
    >

    <TextView
        android:gravity="center_horizontal"
        android:fontFamily="@font/montserrasemibold"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Let's begin"
        android:textColor="#FFFFFF"
        android:textSize="26dp"
        android:textStyle="bold"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/montserrasemibold"

        />

    <EditText
        android:id="@+id/emailField"
        android:layout_width="340dp"
        android:layout_height="75dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/rectangle_user_input"
        android:drawableStart="@drawable/email_icon"
        android:fontFamily="@font/montserrasemibold"
        android:hint="Enter your email"
        android:paddingLeft="13dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="15dp"
        android:paddingBottom="10dp"

        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/montserrasemibold"
        />

    <EditText
        android:id="@+id/passwordField"
        android:layout_width="340dp"
        android:layout_height="75dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/rectangle_user_input"
        android:drawableStart="@drawable/key_icon"
        android:fontFamily="@font/montserrasemibold"
        android:hint="Enter your password"
        android:paddingLeft="13dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="15dp"
        android:paddingBottom="10dp"

        />

    <TextView
        android:id="@+id/forgotPasswordBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginLeft="230dp"
        android:fontFamily="@font/montserrat_bold"
        />


    <Button
        android:id="@+id/loginBtn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginTop="22dp"
        android:layout_width="340dp"
        android:layout_height="65dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rectangle_btn_login"
        android:textColor="#51BEF5"
        android:text="LOGIN"
        android:textAlignment="center"
        android:textSize="16dp"
        android:paddingBottom="5dp"
        android:fontFamily="@font/montserrasemibold"

        />

    <EditText
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="- OR -"

        android:background="#00FFFFFF"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="16dp"
        android:paddingBottom="5dp"
        android:fontFamily="@font/montserrasemibold"
        />

    <TextView
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Sign in with"
        android:background="#00FFFFFF"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="16dp"
        android:paddingBottom="5dp"
        android:fontFamily="@font/montserrasemibold"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >

    <Button
        android:id="@+id/loginWithFacebook"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/login_facebook_icon"
        android:textAlignment="center"
        />


        <Button
            android:id="@+id/loginWithGoogle"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/login_google_icon"
            android:textAlignment="center" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an already? "
            android:background="#00FFFFFF"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:textSize="16dp"
            android:paddingBottom="5dp"
            android:fontFamily="@font/montserrasemibold"
            />

        <EditText
            android:id="@+id/signInBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:background="#00FFFFFF"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:textSize="16dp"
            android:paddingBottom="5dp"
            android:fontFamily="@font/montserrat_bold"
            />

    </LinearLayout>



</LinearLayout>