<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_button_white">

    <View
        android:id="@+id/view4"
        android:layout_width="60dp"
        android:layout_height="6dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_background_cute_blue_rounded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_semi_bold"
        android:paddingBottom="5dp"
        android:text="Edit Course"
        android:textAlignment="center"
        android:textColor="@color/colorVividBlue"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view4" />


    <TextView
        android:id="@+id/textView13"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:paddingBottom="5dp"
        android:text="Course Name"
        android:textAlignment="textStart"
        android:textColor="@color/colorVividBlue"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/dialog_viewCourses_edit_courseName_id"
        app:layout_constraintStart_toStartOf="@+id/dialog_viewCourses_edit_courseName_id" />

    <EditText
        android:id="@+id/dialog_viewCourses_edit_courseName_id"
        android:layout_width="@dimen/EditTextWidthLarge"
        android:layout_height="@dimen/EditTextHeightMedium"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="40dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/shape_input_ash_3"
        android:drawableStart="@drawable/common_ic_book"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Enter Course Name"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:textColor="@color/colorBlackShade"
        android:textColorHint="@color/colorAsh"
        android:textCursorDrawable="@drawable/colored_cursor"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="114dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Instructor Info"
        android:textColor="@color/colorVividBlueTransparent"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/dialog_viewCourses_edit_courseCode_id"
        app:layout_constraintHorizontal_bias="0.032"
        app:layout_constraintStart_toStartOf="@+id/dialog_viewCourses_edit_courseCredit_id"
        app:layout_constraintTop_toBottomOf="@+id/dialog_viewCourses_edit_courseCredit_id" />

    <View
        android:id="@+id/view"
        android:layout_width="110dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorVividBlueTransparent"
        app:layout_constraintEnd_toStartOf="@+id/textView9"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/dialog_viewCourses_edit_courseCredit_id"
        app:layout_constraintTop_toTopOf="@+id/textView9" />

    <View
        android:id="@+id/view2"
        android:layout_width="110dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorVividBlueTransparent"
        app:layout_constraintEnd_toEndOf="@+id/dialog_viewCourses_edit_courseCode_id"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toTopOf="@+id/textView9" />


    <TextView
        android:id="@+id/textView114"
        android:layout_width="116dp"
        android:layout_height="22dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Course Credit"
        android:textAlignment="textStart"
        android:textColor="@color/colorVividBlue"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/dialog_viewCourses_edit_courseCredit_id"
        app:layout_constraintStart_toStartOf="@+id/dialog_viewCourses_edit_courseCredit_id" />

    <EditText
        android:id="@+id/dialog_viewCourses_edit_courseCredit_id"
        android:layout_width="@dimen/EditTextWidthMedium"
        android:layout_height="@dimen/EditTextHeightMedium"
        android:layout_marginTop="34dp"
        android:background="@drawable/shape_input_ash_3"
        android:drawableStart="@drawable/common_ic_weight_blue"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Enter Credit"

        android:paddingStart="10dp"
        android:paddingEnd="15dp"
        android:textColor="@color/colorAsh"
        android:textColorHint="@color/colorAsh"
        android:textCursorDrawable="@drawable/colored_cursor"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/dialog_viewCourses_edit_courseName_id"
        app:layout_constraintTop_toBottomOf="@+id/dialog_viewCourses_edit_courseName_id" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="97dp"
        android:layout_height="22dp"
        android:fontFamily="@font/montserrat_medium"
        android:paddingBottom="5dp"
        android:text="Course Code"
        android:textAlignment="textStart"
        android:textColor="@color/colorVividBlue"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/dialog_viewCourses_edit_courseCode_id"
        app:layout_constraintStart_toStartOf="@+id/dialog_viewCourses_edit_courseCode_id" />


    <EditText
        android:id="@+id/dialog_viewCourses_edit_courseCode_id"
        android:layout_width="@dimen/EditTextWidthMedium"
        android:layout_height="@dimen/EditTextHeightMedium"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="34dp"
        android:background="@drawable/shape_input_ash_3"
        android:drawableStart="@drawable/common_ic_code"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Enter Code"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:textColor="@color/colorAsh"
        android:textColorHint="@color/colorAsh"
        android:textCursorDrawable="@drawable/colored_cursor"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/dialog_viewCourses_edit_courseName_id"
        app:layout_constraintTop_toBottomOf="@+id/dialog_viewCourses_edit_courseName_id" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/montserrat_medium"
        android:paddingBottom="5dp"
        android:text="Name"
        android:textAlignment="center"
        android:textColor="@color/colorVividBlue"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/dialog_viewCourses_edit_instructorName_id"
        app:layout_constraintStart_toStartOf="@+id/dialog_viewCourses_edit_instructorName_id" />

    <EditText
        android:id="@+id/dialog_viewCourses_edit_instructorName_id"
        android:layout_width="@dimen/EditTextWidthLarge"
        android:layout_height="@dimen/EditTextHeightMedium"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:background="@drawable/shape_input_ash_3"
        android:drawableStart="@drawable/common_ic_blue_contact"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Enter Instructor Name"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:textColor="@color/colorAsh"
        android:textColorHint="@color/colorAsh"
        android:textCursorDrawable="@drawable/colored_cursor"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/dialog_viewCourses_edit_courseCredit_id"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <EditText
        android:id="@+id/dialog_viewCourses_edit_instructorEmail_id"
        android:layout_width="@dimen/EditTextWidthLarge"
        android:layout_height="@dimen/EditTextHeightMedium"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="34dp"
        android:background="@drawable/shape_input_ash_3"
        android:drawableStart="@drawable/common_ic_blue_email"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Enter Instructor Email"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:textColor="@color/colorAsh"
        android:textColorHint="@color/colorAsh"
        android:textCursorDrawable="@drawable/colored_cursor"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/dialog_viewCourses_edit_instructorName_id"
        app:layout_constraintTop_toBottomOf="@+id/dialog_viewCourses_edit_instructorName_id" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/montserrat_medium"
        android:paddingBottom="5dp"
        android:text="Email"
        android:textAlignment="center"
        android:textColor="@color/colorVividBlue"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/dialog_viewCourses_edit_instructorEmail_id"
        app:layout_constraintStart_toStartOf="@+id/dialog_viewCourses_edit_instructorEmail_id" />


    <TextView

        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/montserrat_medium"
        android:paddingBottom="5dp"
        android:text="Room"
        android:textAlignment="center"
        android:textColor="@color/colorVividBlue"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/dialog_viewCourses_edit_instructorRoom_id"
        app:layout_constraintStart_toStartOf="@+id/dialog_viewCourses_edit_instructorRoom_id" />


    <EditText
        android:id="@+id/dialog_viewCourses_edit_instructorRoom_id"
        android:layout_width="@dimen/EditTextWidthMedium"
        android:layout_height="@dimen/EditTextHeightMedium"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="34dp"
        android:background="@drawable/shape_input_ash_3"
        android:drawableStart="@drawable/common_ic_blue_room"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Enter Room"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:textColor="@color/colorAsh"
        android:textColorHint="@color/colorAsh"
        android:textCursorDrawable="@drawable/colored_cursor"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/dialog_viewCourses_edit_instructorEmail_id"
        app:layout_constraintTop_toBottomOf="@+id/dialog_viewCourses_edit_instructorEmail_id" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="140dp"
        android:fontFamily="@font/montserrat_medium"
        android:paddingBottom="5dp"
        android:text="Counseling Hours"
        android:textAlignment="center"
        android:textColor="@color/colorVividBlue"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView20"
        app:layout_constraintStart_toEndOf="@+id/textView20"
        app:layout_constraintTop_toTopOf="@+id/textView20" />

    <Button
        android:id="@+id/dialog_viewCourses_edit_updateButton_id"
        style="@style/EditTextShadowStyle"
        android:layout_width="206dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:alpha="0.99"
        android:background="@drawable/shape_background_vividblue_square"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/UpdateBtnText"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dialog_viewCourses_edit_delete_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_viewCourses_edit_instructorRoom_id"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/dialog_viewCourses_edit_delete_id"
        style="@style/EditTextShadowStyle"
        android:layout_width="205dp"
        android:layout_height="40dp"
        android:alpha="0.99"
        android:background="@drawable/shape_background_vividblue_square"
        android:fontFamily="@font/montserrat_medium"
        android:text="DELETE"
        android:textAllCaps="true"
        android:textColor="@color/colorBlack"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dialog_viewCourses_edit_updateButton_id"
        app:layout_constraintTop_toTopOf="@+id/dialog_viewCourses_edit_updateButton_id"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/dialog_viewCourses_edit_addCounsellingHour_button_id"
        style="@style/CommonFABBlue"
        android:layout_width="39dp"
        android:layout_height="45dp"
        android:clickable="true"
        app:fabCustomSize="39dp"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_viewCourses_edit_instructorRoom_id"
        app:layout_constraintEnd_toEndOf="@+id/textView17"
        app:layout_constraintStart_toStartOf="@+id/textView17"
        app:layout_constraintTop_toTopOf="@+id/dialog_viewCourses_edit_instructorRoom_id" />


</androidx.constraintlayout.widget.ConstraintLayout>