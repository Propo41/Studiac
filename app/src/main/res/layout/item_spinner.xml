<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/spinner_image_id"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="5dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/bulletin_ic_notice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/spinner_text_id"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginStart="10dp"
        android:layout_alignBottom="@+id/spinner_image_id"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/spinner_image_id"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center_vertical"
        android:text="@string/ItemSpinner_Text"
        android:textColor="@color/colorBlackShade"
        app:layout_constraintBottom_toBottomOf="@+id/spinner_image_id"
        app:layout_constraintStart_toEndOf="@+id/spinner_image_id"
        app:layout_constraintTop_toTopOf="@+id/spinner_image_id" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="240dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:tint="@color/colorPrimaryDark"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/spinner_text_id"
        app:layout_constraintStart_toEndOf="@+id/spinner_image_id"
        app:layout_constraintTop_toTopOf="@+id/spinner_text_id"
        app:srcCompat="@drawable/common_ic_check" />

</androidx.constraintlayout.widget.ConstraintLayout>