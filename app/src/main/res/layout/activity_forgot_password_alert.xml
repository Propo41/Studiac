<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateNewAccount"
    android:orientation="vertical"
    android:background="#24ADF3">




    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/its_okay_to_forget"
        android:layout_marginTop="130dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/montserrasemibold"
        />

    <EditText
        android:id="@+id/emailField"
        android:layout_width="340dp"
        android:layout_height="75dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/rectangle_user_input"
        android:drawableStart="@drawable/email_icon"
        android:fontFamily="@font/montserrasemibold"
        android:hint="Enter your email"
        android:paddingLeft="13dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="15dp"
        android:paddingBottom="10dp"

        />

    <Button
        android:id="@+id/confirmBtn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="287dp"
        android:layout_height="66dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45dp"
        android:background="@drawable/rectangle_btn_login"
        android:fontFamily="@font/montserrasemibold"
        android:paddingBottom="5dp"
        android:text="CONFIRM"
        android:textAlignment="center"
        android:textColor="#51BEF5"
        android:textSize="16dp"

        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="122dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

    <EditText

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recalled already? "
        android:background="#00FFFFFF"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="16dp"
        android:paddingBottom="5dp"
        android:fontFamily="@font/montserrasemibold"
        />

        <EditText
            android:id="@+id/signInBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:background="#00FFFFFF"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:textSize="16dp"
            android:paddingBottom="5dp"
            android:fontFamily="@font/montserrat_bold"
            />

    </LinearLayout>


</LinearLayout>