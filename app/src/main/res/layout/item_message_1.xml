<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/message_user1_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/montserrat_regular"
        android:paddingStart="5dp"
        android:paddingEnd="15dp"
        android:text="Jun 17, 02:30PM"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/message_user1_message_id"
        app:layout_constraintTop_toBottomOf="@+id/message_user1_message_id" />

    <ImageView
        android:id="@+id/message_user1_image_id"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/message_user1_message_id"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/profile_picture_five" />

    <TextView
        android:id="@+id/message_user1_message_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_chat_bubble_sender"
        android:fontFamily="@font/montserrat_medium"
        android:maxWidth="320dp"
        android:padding="10dp"
        android:text="@string/ItemMessage1_Text"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/message_user1_image_id"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent" />


</androidx.constraintlayout.widget.ConstraintLayout>