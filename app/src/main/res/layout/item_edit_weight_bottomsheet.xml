<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_background_lightblue"
    android:paddingBottom="5dp"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/item_edit_weight_bottom_sheet_grade_text"
        android:layout_width="@dimen/EditTextWidthMediumSmall"
        android:layout_height="45dp"
        android:background="@drawable/shape_background_white_result_tracker_2"
        android:drawableStart="@drawable/result_tracker_ic_grade"
        android:drawablePadding="@dimen/EditTextDrawablePadding"
        android:layout_marginTop="5dp"
        android:drawableTint="@color/colorPrimaryDark"
        android:enabled="false"
        android:fontFamily="@font/montserrat_regular"
        android:paddingStart="@dimen/EditTextDrawablePaddingStart"
        android:paddingEnd="@dimen/EditTextDrawablePaddingStart"
        android:text="@string/resultTrackerItemDialogGradeHint"
        android:textColor="@color/colorVividBlue"
        android:textColorHint="@color/colorVividBlue"
        android:textSize="@dimen/EditTextTextSizeSmallTwo"
        app:layout_constraintEnd_toStartOf="@+id/item_edit_weight_bottom_sheet_grade_point"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/item_edit_weight_bottom_sheet_grade_point"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:layout_marginStart="35dp"
        android:background="@drawable/shape_background_white_result_tracker_2"
        android:drawableStart="@drawable/common_ic_weight_blue_small"
        android:drawablePadding="@dimen/EditTextDrawablePadding"
        android:drawableTint="@color/colorPrimary"
        android:fontFamily="@font/montserrat_regular"
        android:inputType="numberDecimal"
        android:maxLength="4"
        android:paddingStart="@dimen/EditTextDrawablePaddingStart"
        android:paddingEnd="@dimen/EditTextDrawablePaddingStart"
        android:text="@string/resultTrackerItemDialogPointHint"
        android:textColor="@color/colorVividBlue"
        android:textColorHint="@color/colorVividBlue"
        android:textSize="@dimen/EditTextTextSizeSmallTwo"
        app:layout_constraintBottom_toBottomOf="@+id/item_edit_weight_bottom_sheet_grade_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/item_edit_weight_bottom_sheet_grade_text"
        app:layout_constraintTop_toTopOf="@+id/item_edit_weight_bottom_sheet_grade_text"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>