<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.settings.ReportBugActivity">

    <Button
        android:id="@+id/report_bug_send_button_id"
        style="@style/EditTextShadowStyle"
        android:layout_width="0dp"
        android:layout_height="@dimen/ButtonHeightLarge"
        android:layout_marginBottom="@dimen/ButtonBottomHeight"
        android:background="@drawable/shape_background_cute_blue_rounded"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/ReportBug_ButtonPrompt"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/report_bug_input_id"
        app:layout_constraintStart_toStartOf="@+id/report_bug_input_id" />

    <EditText
        android:id="@+id/report_bug_input_id"
        style="@style/EditTextShadowStyle"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_height="@dimen/EditTextHeightNormal"
        android:background="@drawable/shape_input_ash_3"
        android:drawableStart="@drawable/settings_ic_bug"
        android:drawablePadding="@dimen/EditTextDrawablePadding"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/montserrat_regular"
        android:hint="@string/ReportBug_InputPrompt"
        android:inputType="text"
        android:paddingStart="@dimen/EditTextDrawablePaddingStart"
        android:paddingEnd="@dimen/EditTextDrawablePaddingStart"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/textView44"
        app:layout_constraintStart_toStartOf="@+id/textView44"
        app:layout_constraintTop_toBottomOf="@+id/textView44"
        android:autofillHints="@string/ReportBug_InputPrompt" />

    <TextView
        android:id="@+id/textView43"
        style="@style/SettingsSubtitleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:text="@string/ReportBug_InputHeader"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/report_bug_input_id"
        app:layout_constraintStart_toStartOf="@+id/report_bug_input_id" />

    <TextView
        android:id="@+id/textView44"
        android:layout_width="345dp"
        android:layout_height="67dp"
        android:paddingTop="5dp"
        android:padding="15dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/ReportBug_Description2"
        android:textAlignment="center"
        android:textColor="@color/colorCuteBlue"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/textView45"
        app:layout_constraintStart_toStartOf="@+id/textView45"
        app:layout_constraintTop_toBottomOf="@+id/textView45" />

    <TextView
        android:id="@+id/textView45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_semi_bold"
        android:text="@string/ReportBug_Description1"
        android:textColor="@color/colorCuteBlue"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        android:tint="@color/colorCuteBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/settings_ic_bug" />
</androidx.constraintlayout.widget.ConstraintLayout>