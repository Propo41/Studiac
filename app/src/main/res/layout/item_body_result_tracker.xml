<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/backgroundOfItem"
    android:layout_height="120dp"
    android:paddingTop="8dp"
    >

    <ImageView
        android:id="@+id/activity_result_tracker_item_image_view"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.9"
        android:layout_height="110dp"
        android:background="@drawable/shape_background_vividblue_four"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:maxLength="10"
        android:id="@+id/activity_result_tracker_item_semester_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/montserrat_semi_bold"
        android:text="@string/ActivityResultTrackerItemSemester"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/activity_result_tracker_item_image_view"
        app:layout_constraintTop_toTopOf="@+id/activity_result_tracker_item_image_view" />

    <TextView
        android:id="@+id/activity_result_tracker_item_gpa_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/ActivityResultTrackerItemGPA"
        android:maxLength="11"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/EditTextTextSizeMedium"
        app:layout_constraintEnd_toEndOf="@+id/activity_result_tracker_item_semester_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/activity_result_tracker_item_semester_text"
        app:layout_constraintTop_toBottomOf="@+id/activity_result_tracker_item_semester_text" />

    <TextView
        android:id="@+id/activity_result_tracker_item_courses_taken_text"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/ActivityResultTrackerItemCoursesTaken"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/EditTextTextSizeMedium"
        app:layout_constraintEnd_toEndOf="@+id/activity_result_tracker_item_gpa_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/activity_result_tracker_item_gpa_text"
        app:layout_constraintTop_toBottomOf="@+id/activity_result_tracker_item_gpa_text" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/activity_result_tracker_item_add_gpa_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/colorPrimaryLight"
        android:onClick="editWeightBottomSheet"
        android:src="@drawable/common_ic_edit"
        android:tint="@color/colorWhite"
        app:backgroundTint="@color/colorPrimaryLight"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/activity_result_tracker_item_image_view"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>