<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/view_courses_add_credit_id"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.38"
        android:layout_height="@dimen/EditTextHeightNormal"
        android:background="@drawable/shape_input_ash_2_rounded"
        android:drawableStart="@drawable/common_ic_weight_blue_small"
        android:fontFamily="@font/montserrat_regular"
        android:hint="@string/CourseAdd_CourseType_EditText"
        android:layout_marginTop="30dp"
        android:inputType="numberDecimal"
        android:drawablePadding="8dp"
        android:paddingStart="@dimen/EditTextDrawablePaddingStart"
        android:paddingEnd="10dp"
        android:importantForAutofill="no"
        android:textColor="@color/colorBlackShade"
        android:textColorHint="@color/colorAsh"
        android:textSize="@dimen/DialogSubtitleSmallTextSize"
        app:layout_constraintStart_toStartOf="@+id/view_courses_add_code_id"
        app:layout_constraintTop_toBottomOf="@+id/view_courses_add_code_id" />

    <TextView
        android:id="@+id/view_courses_text_credit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:padding="5dp"
        android:text="@string/CourseAdd_CourseCredit_Text"
        android:textColor="@color/colorVividBlue"
        android:textSize="@dimen/DialogSubtitleTextSize"
        app:layout_constraintBottom_toTopOf="@+id/view_courses_add_credit_id"
        app:layout_constraintStart_toStartOf="@+id/view_courses_add_credit_id" />

    <TextView
        android:id="@+id/view_courses_text_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:padding="5dp"
        android:text="@string/CourseAdd_CourseCode_Text"
        android:textColor="@color/colorVividBlue"
        android:textSize="@dimen/DialogSubtitleTextSize"
        app:layout_constraintBottom_toTopOf="@+id/view_courses_add_code_id"
        app:layout_constraintStart_toStartOf="@+id/view_courses_add_code_id" />

    <EditText
        android:id="@+id/view_courses_add_code_id"
        android:layout_width="0dp"
        android:layout_height="@dimen/EditTextHeightNormal"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_input_ash_2_rounded"
        android:drawableStart="@drawable/common_ic_code_s"
        android:drawablePadding="@dimen/EditTextDrawablePadding"
        android:fontFamily="@font/montserrat_regular"
        android:hint="@string/CourseAdd_CourseCode_EditText"
        android:importantForAutofill="no"
        android:inputType="textCapCharacters"
        android:paddingStart="@dimen/EditTextDrawablePaddingStart"
        android:paddingEnd="@dimen/EditTextDrawablePaddingStart"
        android:textColor="@color/colorBlackShade"
        android:textColorHint="@color/colorAsh"
        android:textSize="@dimen/DialogSubtitleSmallTextSize"
        app:layout_constraintEnd_toEndOf="@+id/view_courses_add_name_id"
        app:layout_constraintStart_toStartOf="@+id/view_courses_add_name_id"
        app:layout_constraintTop_toBottomOf="@+id/view_courses_add_name_id" />

    <TextView
        android:id="@+id/view_courses_text_credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:padding="5dp"
        android:text="@string/CourseAdd_CourseType_Text"
        android:textColor="@color/colorVividBlue"
        android:textSize="@dimen/DialogSubtitleTextSize"
        app:layout_constraintBottom_toTopOf="@+id/view_courses_course_type_id"
        app:layout_constraintStart_toStartOf="@+id/view_courses_course_type_id" />

    <TextView
        android:id="@+id/view_courses_text_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginTop="15dp"
        android:text="@string/addroutinetext"
        android:textColor="@color/colorVividBlue"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/view_courses_course_type_id"
        app:layout_constraintStart_toStartOf="@+id/view_courses_add_credit_id"
        app:layout_constraintTop_toBottomOf="@+id/view_courses_add_credit_id" />


    <Spinner
        android:id="@+id/view_courses_course_type_id"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.38"
        android:layout_height="@dimen/EditTextHeightNormal"
        android:background="@drawable/shape_input_ash_2_rounded"
        android:popupBackground="@drawable/shape_spinner_ash"
        app:layout_constraintBottom_toBottomOf="@+id/view_courses_add_credit_id"
        app:layout_constraintEnd_toEndOf="@+id/view_courses_add_code_id"
        app:layout_constraintTop_toTopOf="@+id/view_courses_add_credit_id" />

    <View
        android:id="@+id/view5"
        android:layout_width="@dimen/BottomSheetIconWidth"
        android:layout_height="@dimen/BottomSheetIconHeight"
        android:layout_marginTop="@dimen/BottomSheetIconTopHeight"
        android:background="@drawable/shape_background_cute_blue_rounded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/view_courses_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat_semi_bold"
        android:text="@string/CourseAdd_Text"
        android:textColor="@color/colorVividBlue"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/view5"
        app:layout_constraintStart_toStartOf="@+id/view5"
        app:layout_constraintTop_toBottomOf="@+id/view5" />

    <EditText
        android:id="@+id/view_courses_add_name_id"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.8"
        android:drawableStart="@drawable/common_ic_book_s"
        android:layout_height="@dimen/EditTextHeightNormal"
        android:layout_marginTop="35dp"
        android:background="@drawable/shape_input_ash_2_rounded"
        android:fontFamily="@font/montserrat_regular"
        android:hint="@string/CourseAdd_CourseName_EditText"
        android:drawablePadding="@dimen/EditTextDrawablePadding"
        android:paddingStart="@dimen/EditTextDrawablePaddingStart"
        android:paddingEnd="@dimen/EditTextDrawablePaddingStart"
        android:textColor="@color/colorBlackShade"
        android:textColorHint="@color/colorAsh"
        android:textSize="@dimen/DialogSubtitleSmallTextSize"
        android:importantForAutofill="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_courses_text_title"
        android:inputType="text" />

    <TextView
        android:id="@+id/view_courses_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:padding="5dp"
        android:text="@string/CourseAdd_CourseName_text"
        android:textColor="@color/colorVividBlue"
        android:textSize="@dimen/DialogSubtitleTextSize"
        app:layout_constraintBottom_toTopOf="@+id/view_courses_add_name_id"
        app:layout_constraintStart_toStartOf="@+id/view_courses_add_name_id" />

    <Button
        android:id="@+id/view_courses_add_button_id"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ripple_effect_3"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/CourseAdd_Btn"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_courses_add_routine_button_id" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/view_courses_add_routine_button_id"
        style="@style/CommonFABBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/view_courses_text_add"
        app:layout_constraintStart_toStartOf="@+id/view_courses_text_add"
        app:layout_constraintTop_toBottomOf="@+id/view_courses_text_add"
        app:srcCompat="@drawable/common_ic_routine_white" />

    <Button
        android:id="@+id/debug_import_button"
        android:layout_width="25dp"
        android:visibility="gone"
        android:layout_height="33dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="@+id/view_courses_add_credit_id"
        app:layout_constraintHorizontal_bias="0.768"
        app:layout_constraintStart_toStartOf="@+id/view_courses_add_credit_id"
        app:layout_constraintTop_toBottomOf="@+id/view_courses_add_credit_id" />
</androidx.constraintlayout.widget.ConstraintLayout>