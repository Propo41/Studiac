<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/view_courses_text_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:padding="5dp"
        android:text="Course Code"
        android:textColor="@color/colorVividBlue"
        android:textSize="@dimen/DialogSubtitleTextSize"
        app:layout_constraintBottom_toTopOf="@+id/view_courses_add_code_id"
        app:layout_constraintStart_toStartOf="@+id/view_courses_add_code_id" />

    <EditText
        android:id="@+id/view_courses_add_code_id"
        android:layout_width="@dimen/EditTextWidthMedium"
        android:layout_height="@dimen/EditTextHeightNormal"
        android:background="@drawable/shape_input_ash_2_rounded"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Enter Code"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:drawableStart="@drawable/common_ic_code"
        android:textColor="@color/colorBlackShade"
        android:textColorHint="@color/colorAsh"
        android:textSize="@dimen/DialogSubtitleSmallTextSize"
        app:layout_constraintBottom_toBottomOf="@+id/view_courses_add_credit_id"
        app:layout_constraintEnd_toEndOf="@+id/view_courses_add_name_id"
        app:layout_constraintTop_toTopOf="@+id/view_courses_add_credit_id" />

    <TextView
        android:id="@+id/view_courses_text_credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:padding="5dp"
        android:text="Course Credit"

        android:textColor="@color/colorVividBlue"
        android:textSize="@dimen/DialogSubtitleTextSize"
        app:layout_constraintBottom_toTopOf="@+id/view_courses_add_credit_id"
        app:layout_constraintStart_toStartOf="@+id/view_courses_add_credit_id" />

    <TextView
        android:id="@+id/view_courses_text_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/addroutinetext"
        android:textColor="@color/colorVividBlue"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/view_courses_add_routine_button_id"
        app:layout_constraintStart_toStartOf="@+id/view_courses_add_routine_button_id"
        app:layout_constraintTop_toBottomOf="@+id/view_courses_add_credit_id" />

    <EditText
        android:id="@+id/view_courses_add_credit_id"
        android:layout_width="@dimen/EditTextWidthMedium"
        android:layout_height="@dimen/EditTextHeightNormal"
        android:layout_marginTop="50dp"
        android:background="@drawable/shape_input_ash_2_rounded"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Enter Credit"
        android:drawableStart="@drawable/common_ic_weight_blue"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/colorBlackShade"
        android:textColorHint="@color/colorAsh"
        android:textSize="@dimen/DialogSubtitleSmallTextSize"
        app:layout_constraintStart_toStartOf="@+id/view_courses_add_name_id"
        app:layout_constraintTop_toBottomOf="@+id/view_courses_add_name_id" />

    <View
        android:id="@+id/view5"
        android:layout_width="40dp"
        android:layout_height="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_background_cute_blue_rounded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/view_courses_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat_semi_bold"
        android:text="Add New Course"
        android:textColor="@color/colorVividBlue"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/view5"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/view5"
        app:layout_constraintTop_toBottomOf="@+id/view5" />

    <EditText
        android:id="@+id/view_courses_add_name_id"
        android:layout_width="@dimen/EditTextWidthLarge"
        android:drawableStart="@drawable/common_ic_book"
        android:layout_height="@dimen/EditTextHeightNormal"
        android:layout_marginTop="50dp"
        android:background="@drawable/shape_input_ash_2_rounded"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Enter Course Name"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/colorBlackShade"
        android:textColorHint="@color/colorAsh"
        android:textSize="@dimen/DialogSubtitleSmallTextSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_courses_text_title" />

    <TextView
        android:id="@+id/view_courses_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:padding="5dp"
        android:text="Course Name"
        android:textColor="@color/colorVividBlue"
        android:textSize="@dimen/DialogSubtitleTextSize"
        app:layout_constraintBottom_toTopOf="@+id/view_courses_add_name_id"
        app:layout_constraintStart_toStartOf="@+id/view_courses_add_name_id" />

    <Button
        android:id="@+id/view_courses_add_button_id"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/ripple_effect_3"
        android:fontFamily="@font/montserrat_regular"
        android:text="ADD"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_courses_add_routine_button_id" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/view_courses_add_routine_button_id"
        style="@style/CommonFABBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/view_courses_add_code_id"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@+id/view_courses_add_credit_id"
        app:layout_constraintTop_toBottomOf="@+id/view_courses_text_add"
        app:srcCompat="@drawable/common_ic_routine_white" />
</androidx.constraintlayout.widget.ConstraintLayout>