<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_settings_card_view_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/SettingsItemHeight"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/item_settings_name_id"
            style="@style/SettingsSubtitleTextStyle"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="80dp"
            android:text="TextView" />

        <ImageView
            android:id="@+id/item_settings_image_id"
            style="@style/SettingsDrawableStyle"
            android:layout_width="@dimen/SettingsDrawableSize"
            android:layout_height="@dimen/SettingsDrawableSize"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            app:srcCompat="@drawable/settings_ic_user_edit" />

        <ImageView
            style="@style/SettingsDrawableStyle"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="370dp"
            app:srcCompat="@drawable/settings_ic_next" />

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>