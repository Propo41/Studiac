<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="6dp"
    android:paddingBottom="6dp">

    <TextView
        android:id="@+id/common_add_schedule_item_name_id"
        android:layout_width="@dimen/ViewRoutineItemWidthName"
        android:layout_height="@dimen/ViewRoutineItemHeight"
        android:background="@drawable/shape_background_view_routine_1"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:text="MATH133234"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/ViewRoutineItemTextSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/common_add_schedule_item_end_id"
        android:layout_width="@dimen/ViewRoutineItemWidthTime"
        android:layout_height="@dimen/ViewRoutineItemHeight"
        android:background="@drawable/shape_background_view_routine_2"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginStart="5dp"
        android:gravity="center"
        android:text="03:40AM"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/ViewRoutineItemTextSize"
        app:layout_constraintBottom_toBottomOf="@+id/common_add_schedule_item_start_id"
        app:layout_constraintStart_toEndOf="@+id/common_add_schedule_item_start_id"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/common_add_schedule_item_start_id"
        android:layout_width="@dimen/ViewRoutineItemWidthTime"
        android:layout_height="@dimen/ViewRoutineItemHeight"
        android:background="@drawable/shape_background_view_routine_2"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:text="03:40AM"
        android:layout_marginStart="5dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/ViewRoutineItemTextSize"
        app:layout_constraintBottom_toBottomOf="@+id/common_add_schedule_item_name_id"
        app:layout_constraintStart_toEndOf="@+id/common_add_schedule_item_name_id"
        app:layout_constraintTop_toTopOf="@+id/common_add_schedule_item_name_id" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/common_add_schedule_item_remove_id"
        android:layout_width="16dp"
        android:layout_height="39dp"
        android:layout_marginStart="8dp"
        android:visibility="gone"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/common_add_schedule_item_end_id"
        app:layout_constraintStart_toEndOf="@+id/common_add_schedule_item_end_id"
        app:layout_constraintTop_toTopOf="@+id/common_add_schedule_item_end_id"
        app:srcCompat="@drawable/common_ic_add_blue"
        android:focusable="true" />


</androidx.constraintlayout.widget.ConstraintLayout>