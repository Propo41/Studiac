<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CreateAccountActivity"
    android:orientation="vertical"
    android:background="@color/colorVividBlue">


    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/forgotpassword_cloud_icon"
        android:layout_marginTop="130dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Email"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:textCursorDrawable="@drawable/colored_cursor"
        android:id="@+id/emailField"
        android:layout_width="340dp"
        android:layout_height="75dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/shape_user_input"
        android:drawableStart="@drawable/common_email_icon"
        android:fontFamily="@font/montserrat_regular"
        android:hint="@string/forgotPasswordEmail"
        android:paddingLeft="13dp"
        android:paddingBottom="10dp"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textSize="15sp"

        />

    <Button
        android:id="@+id/confirmBtn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="287dp"
        android:layout_height="66dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45dp"
        android:background="@drawable/common_ui_btn"
        android:fontFamily="@font/montserrat_medium"
        android:paddingBottom="5dp"
        android:text="@string/forgotPasswordConfirmBtn"
        android:textAlignment="center"
        android:textColor="@color/colorVividLightBlue"
        android:textSize="16sp"

        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="122dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorTransparentWhite"
            android:fontFamily="@font/montserrat_regular"
            android:paddingBottom="5dp"
            android:text="Recalled already? "
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/signInBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgotPasswordSignInBtn"
            android:background="@color/colorTransparentWhite"
            android:textColor="@color/colorWhite"
            android:textAlignment="center"
            android:textSize="16sp"
            android:paddingBottom="5dp"
            android:fontFamily="@font/montserrat_bold"
            />

    </LinearLayout>


</LinearLayout>