<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_gravity="bottom"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialog_select_tag_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="45dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/SelectType_text"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/DialogMainTitleSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dialog_select_tag_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/selectButton"
        app:layout_constraintTop_toBottomOf="@+id/dialog_select_tag_title_text" />

    <Button
        android:id="@+id/selectButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ButtonHeightBottomSheet"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/selectButton"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/ButtonTextSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>