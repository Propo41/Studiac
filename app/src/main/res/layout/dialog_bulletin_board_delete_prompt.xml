<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="290dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_background_vividblue_2"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="82dp"
        android:layout_height="64dp"
        android:tint="@color/colorWhite"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dialog_ic_sad_face_s"
        android:contentDescription="@string/content_sad_emoji" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/montserrat_semi_bold"
        android:text="@string/bulletin_board_delete_it_text"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/DialogMainTitleSize"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/bulletin_board_sure_text"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/DialogTitleTextSize"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/dialog_delete_prompt_yes_button_id"
        style="@style/EditTextShadowStyle"
        android:layout_width="150dp"
        android:layout_height="47dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:background="@drawable/shape_bottom_dialog_button_left"
        android:foreground="?android:attr/selectableItemBackground"
        android:fontFamily="@font/montserrat_semi_bold"
        android:text="@string/bulletin_board_button_confirm_text"
        android:textAlignment="center"
        android:textColor="@color/colorVividBlue"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.006"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <Button
        android:id="@+id/dialog_delete_account_no_button_id"
        style="@style/EditTextShadowStyle"
        android:layout_width="150dp"
        android:layout_height="47dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_button_white_five"
        android:fontFamily="@font/montserrat_semi_bold"
        android:text="@string/bulletin_board_button_cancel_text"
        android:foreground="?android:attr/selectableItemBackground"
        android:textAlignment="center"
        android:textColor="@color/colorVividBlue"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_delete_prompt_yes_button_id"
        app:layout_constraintStart_toEndOf="@+id/dialog_delete_prompt_yes_button_id"
        app:layout_constraintTop_toTopOf="@+id/dialog_delete_prompt_yes_button_id" />



</androidx.constraintlayout.widget.ConstraintLayout>