<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_background_vividblue_2"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/dialog_ic_sad_face"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_semi_bold"
        android:text="@string/bulletin_board_delete_it_text"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_semi_bold"
        android:text="@string/bulletin_board_sure_text"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/bulletin_dialog_delete_confirm_button_id"
        android:layout_width="129dp"
        android:layout_height="36dp"
        android:background="@drawable/shape_button_white_leftcorner"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/bulletin_board_button_confirm_text"
        android:textAllCaps="true"
        android:textColor="@color/colorVividBlue"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/bulletin_dialog_delete_cancel_button_id"
        app:layout_constraintEnd_toStartOf="@+id/bulletin_dialog_delete_cancel_button_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bulletin_dialog_delete_cancel_button_id"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/bulletin_dialog_delete_cancel_button_id"
        android:layout_width="129dp"
        android:layout_height="36dp"
        android:layout_marginTop="24dp"
        android:alpha="0.99"
        android:background="@drawable/shape_button_white_rightcorner"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/bulletin_board_button_cancel_text"
        android:textAllCaps="true"
        android:textColor="@color/colorVividBlue"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bulletin_dialog_delete_confirm_button_id"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


</androidx.constraintlayout.widget.ConstraintLayout>