<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorVividBlue"
    android:orientation="vertical"
    tools:context=".activities.ProfileSetup2Activity">


    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/montserrat_semi_bold"
        android:gravity="center_horizontal"
        android:text="You're almost finished\nAdd your courses!"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:text="Course Credit"
        android:textColor="@color/colorWhite"
        android:paddingBottom="5dp"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/setup_course_code_name_id"
        app:layout_constraintStart_toStartOf="@+id/setup_course_code_name_id" />

    <EditText
        android:id="@+id/setup_course_code_name_id"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_input_blue"
        android:drawableStart="@drawable/profilesetup2_ic_book"
        android:fontFamily="@font/montserrat_regular"
        style="@style/EditTextShadowStyle"
        android:hint="@string/profileSetup2Credit"
        android:paddingStart="5dp"
        android:paddingEnd="17.5dp"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textCursorDrawable="@drawable/colored_cursor"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/setup_course_credit_input_id"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/setup_course_credit_input_id"
        app:layout_constraintTop_toBottomOf="@+id/setup_course_credit_input_id" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:paddingBottom="5dp"
        android:text="Course Name"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/setup_course_code_input_id"
        app:layout_constraintStart_toStartOf="@+id/setup_course_code_input_id" />

    <EditText
        android:id="@+id/setup_course_code_input_id"
        android:layout_width="320dp"
        android:layout_height="@dimen/EditTextHeightNormal"
        style="@style/EditTextShadowStyle"
        android:layout_marginTop="70dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_input_blue"
        android:drawableStart="@drawable/profilesetup2_ic_code"
        android:fontFamily="@font/montserrat_regular"
        android:hint="@string/profileSetup2Course"
        android:paddingRight="17.5dp"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textCursorDrawable="@drawable/colored_cursor"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/textView12"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:text="Course Code"
        android:paddingBottom="5dp"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/setup_course_credit_input_id"
        app:layout_constraintStart_toStartOf="@+id/setup_course_credit_input_id" />

    <EditText
        android:id="@+id/setup_course_credit_input_id"
        android:layout_width="320dp"
        android:layout_height="@dimen/EditTextHeightNormal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_input_blue"
        android:drawableStart="@drawable/course_ic_credit"
        android:fontFamily="@font/montserrat_regular"
        android:hint="@string/profileSetup2CourseCode"
        style="@style/EditTextShadowStyle"

        android:paddingRight="17.5dp"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textCursorDrawable="@drawable/colored_cursor"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/setup_course_code_input_id"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/setup_course_code_input_id"
        app:layout_constraintTop_toBottomOf="@+id/setup_course_code_input_id" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/montserrat_regular"
        android:paddingTop="8dp"
        android:text="Add Routine"
        android:textColor="@color/colorWhite"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/setup_add_routine_button_id"
        app:layout_constraintStart_toStartOf="@+id/setup_add_routine_button_id"
        app:layout_constraintTop_toBottomOf="@+id/setup_add_routine_button_id" />

    <Button
        android:id="@+id/setup_add_course_button_id"
        style="@style/EditTextShadowStyle"
        android:layout_width="182dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/ripple_effect_common_button"
        android:fontFamily="@font/montserrat_medium"
        android:onClick="onAddCourseClick"
        android:text="@string/profileSetup2AddCourse"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/colorVividLightBlue"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textView11"
        app:layout_constraintStart_toStartOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@color/colorTransparentWhite"
        android:fontFamily="@font/montserrat_regular"
        android:text="Feeling lazy? "
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/setup_add_later_button_id"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/setup_add_later_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorTransparentWhite"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/profileSetup2AddLaterBtn"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="@+id/textView10" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/setup_add_routine_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onRoutineClick"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/setup_course_code_name_id"
        app:layout_constraintStart_toStartOf="@+id/setup_course_code_name_id"
        app:layout_constraintTop_toBottomOf="@+id/setup_course_code_name_id"
        app:srcCompat="@drawable/common_ic_routine_blue" />

</androidx.constraintlayout.widget.ConstraintLayout>