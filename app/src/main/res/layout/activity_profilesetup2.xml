<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CreateAccountActivity"
    android:orientation="vertical"
    android:background="#24ADF3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/montserrasemibold"
        android:gravity="center_horizontal"
        android:text="You're almost finished\nAdd your courses!"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="26dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Course Name"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"

        />

    <EditText
        android:id="@+id/courseNameField"
        android:layout_width="340dp"
        android:layout_height="75dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/shape_user_input"
        android:drawableStart="@drawable/common_university_icon"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Enter course name"
        android:paddingLeft="13dp"
        android:paddingBottom="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="15dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Course Code (Optional)"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/courseCode"
        android:layout_width="340dp"
        android:layout_height="75dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/shape_user_input"
        android:drawableStart="@drawable/common_university_icon"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Enter course code"
        android:paddingLeft="13dp"
        android:paddingBottom="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="15dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Course Credit"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/courseCredit"
        android:layout_width="340dp"
        android:layout_height="75dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/shape_user_input"
        android:drawableStart="@drawable/common_university_icon"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Enter course credit"
        android:paddingLeft="13dp"
        android:paddingBottom="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Add Routine"
        android:textColor="#FFFFFF"
        android:textSize="17dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/addroutineBtn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="117dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/profilesetup2_addroutine_icon"
        android:textAlignment="center" />

    <Button
        android:id="@+id/addCourseBtn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="182dp"
        android:layout_height="65dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/common_ui_btn"
        android:fontFamily="@font/montserrat_medium"
        android:paddingBottom="5dp"
        android:text="Add Course"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#51BEF5"
        android:textSize="16dp" />




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <EditText

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:fontFamily="@font/montserrat_regular"
            android:paddingBottom="5dp"
            android:text="Feeling lazy? "
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/addLaterBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add later"
            android:background="#00FFFFFF"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:textSize="16dp"
            android:paddingBottom="5dp"
            android:fontFamily="@font/montserrat_bold"
            />

    </LinearLayout>


</LinearLayout>