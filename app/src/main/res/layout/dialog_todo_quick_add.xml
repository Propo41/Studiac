<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view6"
        android:layout_width="@dimen/BottomSheetIconWidth"
        android:layout_height="@dimen/BottomSheetIconHeight"
        android:layout_marginTop="@dimen/BottomSheetIconTopHeight"
        android:background="@drawable/shape_background_cute_blue_rounded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/view_courses_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_semi_bold"
        android:text="@string/TodoQuickAdd_Text1"
        android:textColor="@color/colorVividBlue"
        android:textSize="@dimen/DialogMainTitleSize"
        app:layout_constraintEnd_toEndOf="@+id/view6"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="@+id/view6"
        app:layout_constraintTop_toBottomOf="@+id/view6" />

    <EditText
        android:id="@+id/todo_ADD_quick_description_id"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.8"        android:layout_height="@dimen/EditTextHeightNormal"
        android:background="@drawable/shape_input_ash_2_rounded"
        android:drawableStart="@drawable/common_ic_description"
        android:fontFamily="@font/montserrat_regular"
        android:hint="@string/TodoQuickAdd_EditText1"
        android:layout_marginTop="25dp"
        android:drawablePadding="@dimen/EditTextDrawablePadding"
        android:paddingStart="@dimen/EditTextDrawablePaddingStart"
        android:inputType="text"
        android:importantForAutofill="no"
        android:paddingEnd="@dimen/EditTextDrawablePaddingStart"
        android:textColor="@color/colorBlackShade"
        android:textColorHint="@color/colorAsh"
        android:textSize="@dimen/DialogSubtitleSize"
        app:layout_constraintEnd_toEndOf="@+id/view_courses_text_title"
        app:layout_constraintStart_toStartOf="@+id/view_courses_text_title"
        app:layout_constraintTop_toBottomOf="@+id/view_courses_text_title" />

    <TextView
        android:id="@+id/view_courses_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:padding="5dp"
        android:text="@string/TodoQuickAdd_Text2"
        android:textColor="@color/colorVividBlue"
        android:textSize="@dimen/DialogTitleTextSize"
        app:layout_constraintBottom_toTopOf="@+id/todo_ADD_quick_addNotes_id"
        app:layout_constraintStart_toStartOf="@+id/todo_ADD_quick_addNotes_id" />

    <EditText
        android:id="@+id/todo_ADD_quick_addNotes_id"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:drawableStart="@drawable/common_ic_description"
        android:background="@drawable/shape_input_ash_2_rounded"
        android:fontFamily="@font/montserrat_regular"
        android:drawablePadding="@dimen/EditTextDrawablePadding"
        android:paddingStart="@dimen/EditTextDrawablePaddingStart"
        android:paddingEnd="@dimen/EditTextDrawablePaddingStart"
        android:hint="@string/TodoQuickAdd_EditText2"
        android:textColor="@color/colorBlackShade"
        android:textColorHint="@color/colorAsh"
        android:inputType="text"
        android:textSize="@dimen/DialogSubtitleSize"
        android:importantForAutofill="no"
        app:layout_constraintEnd_toEndOf="@+id/todo_ADD_quick_description_id"
        app:layout_constraintStart_toStartOf="@+id/todo_ADD_quick_description_id"
        app:layout_constraintTop_toBottomOf="@+id/todo_ADD_quick_description_id" />

    <Button
        android:id="@+id/todo_ADD_quick_add_button_id"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/ripple_effect_3"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/TodoQuickAdd_Btn"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/todo_ADD_quick_addNotes_id" />
</androidx.constraintlayout.widget.ConstraintLayout>