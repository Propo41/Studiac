<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/shape_bottom_sheet_background"
    android:layout_height="wrap_content">
    <View
        android:layout_width="40dp"
        android:layout_height="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_background_cute_blue_rounded"
        app:layout_constraintBottom_toTopOf="@+id/currenttasks_quickadd_title_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/currenttasks_quickadd_title_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/montserrat_semi_bold"
        android:text="Add Quick Task"
        android:textColor="@color/colorVividBlue"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/currenttasks_quickadd_description_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/currenttasks_quickadd_description_id"
        android:layout_width="350dp"
        android:layout_height="@dimen/EditTextHeightMedium"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/shape_input_ash_2"
        android:fontFamily="@font/montserrat_regular"
        android:hint="I want to . . ."
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:textColor="@color/colorBlackShade"
        android:textColorHint="@color/colorAsh"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/currenttasks_quickadd_subtitle_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currenttasks_quickadd_title_id" />

    <TextView
        android:id="@+id/currenttasks_quickadd_subtitle_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Additional Notes"
        android:textColor="@color/colorVividBlue"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/currenttasks_quickadd_notes_id"
        app:layout_constraintStart_toStartOf="@+id/currenttasks_quickadd_notes_id"
        app:layout_constraintTop_toBottomOf="@+id/currenttasks_quickadd_description_id" />

    <EditText
        android:id="@+id/currenttasks_quickadd_notes_id"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_input_ash_2"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Enter Additional Notes If Any . . ."
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:textColor="@color/colorBlackShade"
        android:textColorHint="@color/colorAsh"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/currenttasks_quickadd_button_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currenttasks_quickadd_subtitle_id" />

    <Button
        android:id="@+id/currenttasks_quickadd_button_id"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/ripple_effect_3"
        android:fontFamily="@font/montserrat_regular"
        android:text="ADD"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currenttasks_quickadd_notes_id" />
</androidx.constraintlayout.widget.ConstraintLayout>