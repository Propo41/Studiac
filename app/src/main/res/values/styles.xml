<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/montserrasemibold</item>
    </style>

    <style name="editText" parent="AppTheme">
        <item name="colorAccent">@color/colorWhite</item>
    </style>

    <style name="PopupMenuStyleWhiteToolbar">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:textColor">@color/colorAsh</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="CustomDrawerFont" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/colorAsh</item>
        <item name="android:textSize">16sp</item>
        <item name="itemIconSize">18dp</item>

    </style>

    <style name="CustomTitleFontWhite">
        <item name="android:fontFamily">@font/montserrasemibold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="CustomTitleFontBlue">
        <item name="android:fontFamily">@font/montserrasemibold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomSubtitleFontBlue">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="CustomSubtitleFontWhite">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="CustomSubtitleFontAsh">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/colorAsh</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomToolbarFontBlue">
        <item name="android:fontFamily">@font/montserrasemibold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="titleTextColor">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorPrimaryDark
        </item> <!-- changes the color of hamburger icon to blue -->
        <!-- this can also be done programatically by adding:
         actionBarDrawerToggle.getDrawerArrowDrawable().setColor(getResources().getColor(R.color.white)); -->
    </style>


    <style name="CustomTabStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
        <!--to fix the selected tab color side effect   -->
        <item name="tabSelectedTextColor">@color/colorPrimaryDark</item>

        <item name="tabTextColor">@color/colorAsh</item>


    </style>

    <style name="CurrentWeekCustomHeaderStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="tabTextColor">@color/colorAsh</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">25dp</item>

    </style>

    <style name="WhiteActionBar">
        <item name="titleTextColor">@color/colorPrimaryDark</item>
    </style>


    <!--    custom font for bottom navigation view    -->
    <style name="CustomBottomNavFont" parent="Widget.Design.BottomNavigationView">
        <item name="titleTextColor">@color/colorAsh</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>


    <style name="ToDo_Task_FontStyle">
        <item name="android:textColor">@color/colorAsh</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textAlignment">textStart</item>
    </style>


    <!-- style for the rounded bottom sheet dialog -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_background_dialog_bottom</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>


    <!-- style for the big floating action button -->
    <style name="AddFABStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="srcCompat">@drawable/common_ic_add_white</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:focusable">true</item>
    </style>
    <!-- style for small floating action buttons -->
    <style name="AddMiniFABStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="srcCompat">@drawable/common_ic_add_white</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- style for the popup FAB Official button -->
    <style name="AddFABStyle_Official">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="srcCompat">@drawable/bulletin_ic_official_16dp</item>
    </style>


    <!-- style for the popup FAB Advertisement button -->
    <style name="AddFABStyle_Advertisement">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="srcCompat">@drawable/bulletin_ic_advertisement_16dp</item>
    </style>

    <!-- style for the popup FAB Help button -->
    <style name="AddFABStyle_Help">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="srcCompat">@drawable/bulletin_ic_help_16dp</item>
    </style>


    <style name="CustomTabStyleIcon" parent="android:Widget">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/TextAppearance.Design.Tab</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>


    <!-- style for the text style of dashboard -->
    <style name="DashboardButtonFontStyle">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">7dp</item>
    </style>


    <style name="TransparentText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="fontFamily"> @font/montserrasemibold</item>
    </style>

</resources>
